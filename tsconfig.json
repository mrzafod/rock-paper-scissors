{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowJs": true,
    "checkJs": false,
    "jsx": "preserve",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": ".meteor/local/build",
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "/imports/*": [
        "./imports/*"
      ],
      "/server/*": [
        "./server/*"
      ],
      "/tests/*": [
        "./tests/*"
      ],
    },
  },
  "include": [
    "imports/**/*",
    "server/**/*",
    "tests/**/*"
  ]
}